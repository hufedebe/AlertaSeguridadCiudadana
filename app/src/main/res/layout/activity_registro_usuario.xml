<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC"
    android:id="@+id/registro_layout"

    tools:context=".view.activity.RegistroUsuarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >



            <ImageView
                android:id="@+id/back_arrow"
                android:clickable="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/back_sky"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@+id/back_arrow"
                android:fontFamily="cursive"
                android:text="Registrate:"
                android:textColor="#561e19"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="120dp"
                android:text="Nombre"
                android:textColor="#9d9d9c" />

            <EditText
                android:id="@+id/editText_nombre"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:hint="Insetar Nombre"
                android:inputType="textEmailAddress"
                android:textColor="#9d9d9c"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_correo"
                android:background="@drawable/text_sesion" />

            <TextView
                android:id="@+id/txt_apellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:text="Apellido"
                android:layout_below="@id/editText_nombre"
                android:textColor="#9d9d9c" />

            <EditText
                android:id="@+id/editText_apellido"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:hint="Insertar Apellido"
                android:inputType="text"
                android:textColor="#9d9d9c"
                android:layout_below="@id/txt_apellido"
                android:background="@drawable/text_sesion" />

            <TextView
                android:id="@+id/txt_celular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:text="Celular"
                android:layout_below="@id/editText_apellido"
                android:textColor="#9d9d9c" />

            <EditText
                android:id="@+id/editText_celular"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:hint="Insertar Celular"
                android:inputType="number"
                android:textColor="#9d9d9c"
                android:layout_below="@id/txt_celular"
                android:background="@drawable/text_sesion" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:text="Correo:"
                android:layout_below="@id/editText_celular"
                android:textColor="#9d9d9c" />

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:hint="Insertar Correo"
                android:inputType="textEmailAddress"
                android:textColor="#9d9d9c"
                android:layout_below="@id/txt_email"
                android:background="@drawable/text_sesion" />

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:text="Contrase침a:"
                android:layout_below="@id/editText_email"
                android:textColor="#9d9d9c" />

            <EditText
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:inputType="textPassword"
                android:hint="Insertar Contrase침a"
                android:textColor="#9d9d9c"
                android:layout_below="@id/txt_password"
                android:background="@drawable/text_sesion" />

            <TextView
                android:id="@+id/txt_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:text="Direcci칩n:"
                android:layout_below="@id/editText_password"
                android:textColor="#9d9d9c" />

            <EditText
                android:id="@+id/editText_direccion"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:hint="Insertar Direcci칩n"
                android:inputType="text"
                android:textColor="#9d9d9c"
                android:layout_below="@id/txt_direccion"
                android:background="@drawable/text_sesion" />



            <Button
                android:id="@+id/btn_registro"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/editText_direccion"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="160dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/boton_sesion"
                android:text="Registrar"
                android:textAllCaps="false"
                android:textColor="#561e19"
                />

            <ProgressBar
                android:id="@+id/pbLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_celular"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />
        </RelativeLayout>

    </ScrollView>

</LinearLayout>